<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔘 Botones Interactivos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorPrimary" />

        <!-- Explicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Los botones permiten al usuario realizar acciones específicas. Son elementos interactivos fundamentales en cualquier interfaz."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Botón Normal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔵 Botón Normal:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presiona aquí"
            android:layout_marginBottom="16dp" />

        <!-- Botón con Ícono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔵 Botón con Ícono:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnIcono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Me Gusta"
            android:drawableStart="@android:drawable/ic_menu_preferences"
            android:drawablePadding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Botón Outlined -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Botón Outlined:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOutlined"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Botón Outlined"
            android:layout_marginBottom="16dp" />

        <!-- Botón de Texto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📄 Botón de Texto:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTexto"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Botón de Texto"
            android:layout_marginBottom="16dp" />

        <!-- ImageButton -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖼️ Botón de Imagen:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/ibCorazon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_input_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Botón agregar"
                android:layout_margin="8dp" />

            <ImageButton
                android:id="@+id/ibCompartir"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_menu_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Botón compartir"
                android:layout_margin="8dp" />

            <ImageButton
                android:id="@+id/ibInfo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Botón información"
                android:layout_margin="8dp" />

        </LinearLayout>

        <!-- ToggleButton -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Botón Toggle:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="Activado 🟢"
            android:textOff="Desactivado 🔴"
            android:layout_marginBottom="16dp" />

        <!-- Contador de clics -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Contador de Interacciones:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvContador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de clics: 0"
            android:textSize="16sp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Botón Reset -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Reiniciar Contador"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Footer informativo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✨ Esta pantalla demuestra botones interactivos de Android"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>
</ScrollView>
