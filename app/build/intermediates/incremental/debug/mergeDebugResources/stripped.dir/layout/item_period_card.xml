<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/DinosaurCard"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Timeline indicator -->
        <View
            android:id="@+id/timelineIndicator"
            android:layout_width="6dp"
            android:layout_height="0dp"
            android:background="@color/accent_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Icono del período -->
        <ImageView
            android:id="@+id/ivPeriodIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/timelineIndicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_triassic_period"
            android:contentDescription="Period icon" />

        <!-- Contenido de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/ivPeriodIcon"
            app:layout_constraintEnd_toStartOf="@id/ivExploreArrow"
            app:layout_constraintTop_toTopOf="@id/ivPeriodIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivPeriodIcon">

            <TextView
                android:id="@+id/tvPeriodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.DinosaurName"
                tools:text="Triásico" />

            <TextView
                android:id="@+id/tvPeriodTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.DinosaurInfo"
                android:layout_marginTop="2dp"
                tools:text="252 - 201 Ma" />

            <TextView
                android:id="@+id/tvPeriodDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.DinosaurInfo"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                tools:text="Los primeros dinosaurios" />

        </LinearLayout>

        <!-- Flecha de exploración -->
        <ImageView
            android:id="@+id/ivExploreArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_explore"
            app:tint="@color/primary_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Explore period" />

        <!-- Puntos de interés indicator -->
        <LinearLayout
            android:id="@+id/interestPointsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/ivPeriodIcon"
            app:layout_constraintTop_toBottomOf="@id/ivPeriodIcon">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_fossil_site"
                app:tint="@color/secondary_brown"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvInterestCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/text_secondary"
                tools:text="3 puntos" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>