<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/DinosaurCard"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen de la criatura -->
        <ImageView
            android:id="@+id/ivCreatureImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/creature_image_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_triceratops"
            android:contentDescription="Creature image" />

        <!-- Contenido de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/ivCreatureImage"
            app:layout_constraintEnd_toStartOf="@id/ivDetailArrow"
            app:layout_constraintTop_toTopOf="@id/ivCreatureImage">

            <TextView
                android:id="@+id/tvCreatureName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.DinosaurName"
                tools:text="Triceratops" />

            <TextView
                android:id="@+id/tvCreatureScientificName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.DinosaurInfo"
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                tools:text="Triceratops horridus" />

            <TextView
                android:id="@+id/tvCreatureDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.DinosaurInfo"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                tools:text="Herbívoro • 9m de largo" />

            <TextView
                android:id="@+id/tvCreatureDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.DinosaurInfo"
                android:layout_marginTop="6dp"
                android:textSize="11sp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Dinosaurio con tres cuernos característicos y una gran cresta ósea..." />

        </LinearLayout>

        <!-- Flecha de detalles -->
        <ImageView
            android:id="@+id/ivDetailArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="@color/primary_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="View details" />

        <!-- Etiquetas de características -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/ivCreatureImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCreatureImage">

            <TextView
                android:id="@+id/tvEraTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:text="Cretácico"
                android:textSize="10sp"
                android:textColor="@color/text_on_primary"
                android:padding="4dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvSizeTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:text="Grande"
                android:textSize="10sp"
                android:textColor="@color/text_on_primary"
                android:padding="4dp"
                android:layout_marginEnd="4dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>