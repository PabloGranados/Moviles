<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ℹ️ Elementos de Información"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorPrimary" />

        <!-- Explicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Los elementos de información muestran datos, estado y progreso al usuario de manera visual y clara."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- TextViews -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 TextViews (Mostrar texto):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este es un TextView normal con texto simple."
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este TextView tiene texto en NEGRITA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este TextView tiene texto en cursiva"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="16dp" />

        <!-- ImageViews -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖼️ ImageViews (Mostrar imágenes):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivIcono1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_dialog_info"
                android:layout_margin="8dp"
                android:contentDescription="Icono de información" />

            <ImageView
                android:id="@+id/ivIcono2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_margin="8dp"
                android:contentDescription="Icono de estrella" />

            <ImageView
                android:id="@+id/ivIcono3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_margin="8dp"
                android:contentDescription="Icono de alerta" />

        </LinearLayout>

        <!-- ProgressBars -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏳ ProgressBars (Mostrar progreso):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ProgressBar indeterminado (circular):"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressBarCircular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ProgressBar determinado (barra horizontal):"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvProgreso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progreso: 0%"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressBarHorizontal"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:layout_marginBottom="16dp" />

        <!-- Controles para el ProgressBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnIniciarProgreso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="▶️ Iniciar"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDetenerProgreso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⏸️ Detener"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Datos dinámicos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Información Dinámica:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorSurfaceVariant"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🕐 Fecha y hora actual: --"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvContadorVisitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👁️ Veces que has visitado esta pantalla: 0"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvEstadoConexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📡 Estado: Evaluando..."
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Botón para actualizar -->
        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Actualizar Información"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
