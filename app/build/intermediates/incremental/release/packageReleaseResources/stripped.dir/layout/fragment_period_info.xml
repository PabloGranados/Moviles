<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Información general del período -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DinosaurCard"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvPeriodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DinosaurText.DinosaurName"
                    tools:text="Período Triásico" />

                <TextView
                    android:id="@+id/tvTimeRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DinosaurText.DinosaurInfo"
                    android:layout_marginTop="4dp"
                    tools:text="252 - 201 millones de años atrás" />

                <TextView
                    android:id="@+id/tvPeriodDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DinosaurText.DinosaurInfo"
                    android:layout_marginTop="12dp"
                    tools:text="Descripción detallada del período..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Clima y ambiente -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DinosaurCard"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clima y Ambiente"
                    style="@style/DinosaurText.DinosaurName"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvClimate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DinosaurText.DinosaurInfo"
                    android:layout_marginTop="8dp"
                    tools:text="Información sobre el clima del período..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Evolución -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DinosaurCard"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eventos Evolutivos"
                    style="@style/DinosaurText.DinosaurName"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvEvolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DinosaurText.DinosaurInfo"
                    android:layout_marginTop="8dp"
                    tools:text="Eventos evolutivos importantes del período..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Fósiles importantes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DinosaurCard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descubrimientos Importantes"
                    style="@style/DinosaurText.DinosaurName"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvFossils"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/DinosaurText.DinosaurInfo"
                    android:layout_marginTop="8dp"
                    tools:text="Fósiles y descubrimientos importantes..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>