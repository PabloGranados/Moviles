<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Título Principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 UI Elements Demo"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorPrimary" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Explora diferentes elementos de interfaz de usuario de Android. Cada sección demuestra componentes específicos con ejemplos interactivos."
            android:textSize="16sp"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="4dp"
            android:gravity="center" />

        <!-- Botón TextFields -->
        <Button
            android:id="@+id/btnTextFields"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📝 Campos de Texto\n(EditText)"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="16dp" />

        <!-- Botón Botones -->
        <Button
            android:id="@+id/btnBotones"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="🔘 Botones Interactivos\n(Button, ImageButton)"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@android:drawable/ic_menu_preferences"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="16dp" />

        <!-- Botón Selección -->
        <Button
            android:id="@+id/btnSeleccion"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="☑️ Elementos de Selección\n(CheckBox, RadioButton, Switch)"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@android:drawable/ic_menu_agenda"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="16dp" />

        <!-- Botón Listas -->
        <Button
            android:id="@+id/btnListas"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="📋 Listas Interactivas\n(RecyclerView, ListView)"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@android:drawable/ic_menu_sort_by_size"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="16dp" />

        <!-- Botón Información -->
        <Button
            android:id="@+id/btnInformacion"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="ℹ️ Elementos de Información\n(TextView, ImageView, ProgressBar)"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|start"
            android:paddingStart="24dp"
            android:paddingEnd="16dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✨ Toca cualquier botón para explorar ese elemento de UI"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>
</ScrollView>
