<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Mapa interactivo simulado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mapCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        style="@style/DinosaurCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/exploration_map_background">

            <!-- Puntos de interés en el mapa -->
            <ImageView
                android:id="@+id/ivPoint1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fossil_site"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Fossil site 1" />

            <ImageView
                android:id="@+id/ivPoint2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_research_station"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="80dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Research station" />

            <ImageView
                android:id="@+id/ivPoint3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_observation_point"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="120dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Observation point" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Información de exploración -->
    <TextView
        android:id="@+id/tvExploreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sitios de Exploración"
        style="@style/DinosaurText.DinosaurName"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mapCard"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- RecyclerView para sitios de exploración -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExplorationSites"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvExploreTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_exploration_site" />

</androidx.constraintlayout.widget.ConstraintLayout>