<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Tema base de la aplicación -->
    <style name="DinosaurTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <item name="colorSecondary">@color/secondary_brown</item>
        <item name="colorSecondaryVariant">@color/secondary_brown_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <item name="android:colorBackground">@color/surface_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_on_surface</item>
        
        <item name="colorAccent">@color/accent_orange</item>
        
        <!-- Personalización de la barra de estado -->
        <item name="android:statusBarColor">@color/primary_green_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Tema sin ActionBar para activities con toolbar personalizado -->
    <style name="DinosaurTheme.NoActionBar" parent="DinosaurTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Estilos para texto -->
    <style name="DinosaurText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="DinosaurText.Title" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:lineHeight">34sp</item>
    </style>

    <style name="DinosaurText.Subtitle" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="DinosaurText.SectionTitle" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineHeight">30sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.CardTitle" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.Description" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">20sp</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.EraTitle" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineHeight">26sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.EraDescription" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.PeriodTitle" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.PeriodInfo" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.CreatureName" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineHeight">22sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.CreatureScientific" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.CreatureInfo" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.CreatureDescription" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineHeight">16sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DinosaurText.DialogTitle" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineHeight">26sp</item>
    </style>

    <style name="DinosaurText.DialogContent" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="DinosaurText.Tag" parent="DinosaurText">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Aliases para compatibilidad con layouts existentes -->
    <style name="DinosaurText.DinosaurName" parent="DinosaurText.CreatureName" />
    <style name="DinosaurText.DinosaurInfo" parent="DinosaurText.CreatureInfo" />

    <!-- Estilos para botones -->
    <style name="DinosaurButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="DinosaurButton.Secondary" parent="DinosaurButton">
        <item name="backgroundTint">@color/secondary_brown</item>
    </style>

    <style name="DinosaurButton.Accent" parent="DinosaurButton">
        <item name="backgroundTint">@color/accent_orange</item>
    </style>

    <!-- Estilos para cards -->
    <style name="DinosaurCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background_elevated</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation_normal</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="rippleColor">@color/ripple_effect</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/border_subtle</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DinosaurCard.Era" parent="DinosaurCard">
        <item name="cardElevation">@dimen/card_elevation_high</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius_large</item>
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
    </style>

    <style name="DinosaurCard.Period" parent="DinosaurCard">
        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
    </style>

    <style name="DinosaurCard.Creature" parent="DinosaurCard">
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
    </style>

    <style name="DinosaurCard.Dialog" parent="DinosaurCard">
        <item name="cardElevation">@dimen/card_elevation_high</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Estilos para transiciones -->
    <style name="DinosaurAnimation">
        <item name="android:duration">@android:integer/config_mediumAnimTime</item>
    </style>

    <style name="DinosaurAnimation.SlideIn" parent="DinosaurAnimation">
        <item name="android:duration">500</item>
    </style>

    <style name="DinosaurAnimation.FadeIn" parent="DinosaurAnimation">
        <item name="android:duration">300</item>
    </style>

</resources>