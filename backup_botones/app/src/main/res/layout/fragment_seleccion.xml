<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☑️ Elementos de Selección"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="?attr/colorPrimary" />

        <!-- Explicación -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Los elementos de selección permiten al usuario elegir entre diferentes opciones de manera intuitiva."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- CheckBoxes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☑️ CheckBoxes (Selección múltiple):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona tus lenguajes de programación favoritos:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/cbKotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kotlin 🟢"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/cbJava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java ☕"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/cbPython"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python 🐍"
            android:layout_marginBottom="4dp" />

        <CheckBox
            android:id="@+id/cbJavaScript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JavaScript 💛"
            android:layout_marginBottom="16dp" />

        <!-- RadioButtons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔘 RadioButtons (Selección única):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuál es tu nivel de experiencia en programación?"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgNivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbPrincipiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Principiante 🌱"
                android:layout_marginBottom="4dp" />

            <RadioButton
                android:id="@+id/rbIntermedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermedio 🌳"
                android:layout_marginBottom="4dp" />

            <RadioButton
                android:id="@+id/rbAvanzado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanzado 🌟"
                android:layout_marginBottom="4dp" />

            <RadioButton
                android:id="@+id/rbExperto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experto 🚀" />

        </RadioGroup>

        <!-- Switches -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔄 Switches (Activar/Desactivar):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recibir notificaciones 🔔" />

            <Switch
                android:id="@+id/swNotificaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modo oscuro 🌙" />

            <Switch
                android:id="@+id/swModoOscuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sincronización automática 🔄" />

            <Switch
                android:id="@+id/swSincronizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Spinner -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Spinner (Lista desplegable):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona tu país:"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Botón para mostrar selecciones -->
        <Button
            android:id="@+id/btnMostrarSelecciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Mostrar Selecciones"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- TextView para mostrar resultado -->
        <TextView
            android:id="@+id/tvResultadoSeleccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="12dp"
            android:visibility="gone" />

        <!-- Footer informativo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✨ Esta pantalla demuestra elementos de selección de Android"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>
</ScrollView>
