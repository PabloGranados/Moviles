<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título del fragment -->
    <TextView
        android:id="@+id/tvInterestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos de Interés"
        style="@style/DinosaurText.DinosaurName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView horizontal para puntos de interés -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInterestPoints"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvInterestTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_interest_point" />

</androidx.constraintlayout.widget.ConstraintLayout>