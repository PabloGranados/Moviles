<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/DinosaurCard.Period">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding_standard"
        android:minHeight="@dimen/card_min_height"
        android:paddingBottom="@dimen/padding_large">

        <!-- Timeline indicator -->
        <View
            android:id="@+id/timelineIndicator"
            android:layout_width="@dimen/timeline_indicator_width"
            android:layout_height="0dp"
            android:background="@color/accent_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Icono del período -->
        <ImageView
            android:id="@+id/ivPeriodIcon"
            android:layout_width="@dimen/image_size_medium"
            android:layout_height="@dimen/image_size_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:scaleType="centerInside"
            android:padding="@dimen/padding_small"
            android:background="@drawable/creature_image_background"
            app:layout_constraintStart_toEndOf="@id/timelineIndicator"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_triassic_period"
            android:contentDescription="Period icon" />

        <!-- Contenido de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_small"
            app:layout_constraintStart_toEndOf="@id/ivPeriodIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivPeriodIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivPeriodIcon">

            <TextView
                android:id="@+id/tvPeriodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.PeriodTitle"
                tools:text="Triásico" />

            <TextView
                android:id="@+id/tvPeriodTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.PeriodInfo"
                android:layout_marginTop="@dimen/text_spacing_tiny"
                android:textStyle="bold"
                tools:text="252 - 201 Ma" />

            <TextView
                android:id="@+id/tvPeriodDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DinosaurText.PeriodInfo"
                android:layout_marginTop="@dimen/text_spacing_small"
                tools:text="Los primeros dinosaurios aparecen en este período" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>